{% extends 'base.html.twig' %}

{% block title %}Edit Car Image{% endblock %}

{% block body %}

    <h1>{{ admin_car.title }}</h1>
<form action="{{ path('admin_cars_iupdate1',{'id':id}) }}" method="post" enctype="multipart/form-data">
    Select image to upload:
    <input name="admin_car.id" type = "hidden" value="{{ id }}" type="number" readonly>
    <input type="file" name="imagename" id="fileToUpload">
    <input type="submit" value="Upload Image" name="submit">
</form>
    {% if admin_car.image != null %}
        <img src="/uploads/{{ admin_car.image }}">
    {% endif %}

{% endblock %}
