<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin/cars">Araç-İşlemleri</a>
            </li>

        </ol></div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">

                            <select name="admin_cars[category_id]" class="form-control-lg" style="width:230px;">

                                {% if (catname) %}
                                <option value="{{ admin_car.categoryid }}" style="font-size:1px;" >{{ catname[0].title }}</option>
                                {% endif %}
                                {% for cat in catlist %}
                                    <option value="{{ cat.id }}">{{ cat.title }}</option>

                                {% endfor %}

                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[title]" value="{{ admin_car.title }}" required="required" maxlength="40">                                <label for="firstName">Title</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[description]" value="{{ admin_car.description }}" required="required" maxlength="40">                                <label for="firstName">Description</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[saleprice]" value="{{ admin_car.saleprice }}" required="required" maxlength="40">                                <label for="firstName">Satış Fiyatı</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[price]" value="{{ admin_car.price }}" required="required" maxlength="40">                                <label for="firstName">Alış Fiyatı</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[keywords]" value="{{ admin_car.keywords }}" required="required" maxlength="40">                            <label for="firstName">Keywords</label>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[status]" value="{{ admin_car.status }}"  maxlength="40">                            <label for="firstName">Status - Online/Offline</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[type]" value="{{ admin_car.type }}" required="required" maxlength="40">                            <label for="firstName">Telefon</label>
                        </div>
                    </div>
                </div>
            </div>
            {% if admin_car.image != null %}
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" name="admin_cars[image]" value="{{ admin_car.image }}" required="required" maxlength="40">                            <label for="firstName">Image</label>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                         <textarea  id="editor" name="admin_cars[detail]" rows = "10" cols="100" >{{ admin_car.detail }}</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                ClassicEditor
                    .create( document.querySelector( '#editor' ) )
                    .catch( error => {
                        console.error( error );
                    } );
            </script>



            <button class="btn btn-primary btn-block col-sm-3" type="submit">Kaydet</button>

    </div>



