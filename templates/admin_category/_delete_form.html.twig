<form method="post" action="{{ path('admin_category_delete', {'id': admin_category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin_category.id) }}">
    <button class="btn btn-primary btn-block col-sm-8">Delete</button>
</form>
